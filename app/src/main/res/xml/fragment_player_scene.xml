<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint>
            <CustomAttribute
                app:attributeName="disabled"
                app:customBoolean="false" />
        </Constraint>
        <Constraint
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="@id/recyclerBackground"
            app:layout_constraintStart_toStartOf="@id/recyclerBackground"
            app:layout_constraintTop_toTopOf="@id/recyclerBackground" />
        <Constraint
            android:id="@+id/bgGradient"
            android:layout_width="match_parent"
            android:layout_height="850dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/recyclerBackground"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:transitionEasing="cubic(0,1,1,0)" />
        <Constraint
            android:id="@+id/seekBar"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/artistHolder" />
        <Constraint
            android:id="@+id/songHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toEndOf="@id/coverArtHolder"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/artistHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/songHolder"
            app:layout_constraintTop_toBottomOf="@+id/songHolder"
            app:layout_constraintVertical_bias="0.0" />
        <Constraint
            android:id="@+id/coverArtHolder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:elevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="@id/recyclerBackground"
            app:layout_constraintStart_toStartOf="@id/recyclerBackground"
            app:layout_constraintTop_toTopOf="@id/recyclerBackground" />
        <Constraint
            android:id="@+id/playingFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/playingFromText"
            app:layout_constraintStart_toStartOf="@id/playingFromText"
            app:layout_constraintEnd_toEndOf="@id/playingFromText"
            android:alpha="0" />
        <Constraint
            android:id="@+id/playingFromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:motionInterpolator="cubic(0,0.86,1,0)">
        <OnSwipe
            app:touchAnchorId="@id/recyclerBackground"
            app:touchAnchorSide="bottom"
            app:touchRegionId="@id/handle" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="40"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@+id/coverArtHolder"
                app:percentY="0.9"
                app:sizePercent="0.7" />
            <KeyAttribute
                app:motionTarget="@+id/playingFrom"
                app:framePosition="10"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/playingFromText"
                app:framePosition="10"
                android:alpha="0" />
            <KeyPosition
                app:motionTarget="@+id/playingFromText"
                app:framePosition="8"
                app:keyPositionType="deltaRelative"
                app:percentY="1.0" />
            <KeyPosition
                app:motionTarget="@+id/playingFrom"
                app:framePosition="8"
                app:keyPositionType="deltaRelative"
                app:percentY="1.0" />

        </KeyFrameSet>
    </Transition>
</MotionScene>
