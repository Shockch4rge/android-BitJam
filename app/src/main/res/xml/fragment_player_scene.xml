<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint>
            <CustomAttribute
                app:attributeName="disabled"
                app:customBoolean="false"/>
        </Constraint>
        <Constraint
            android:id="@+id/handle"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="@id/recyclerBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/recyclerBackground"
            app:layout_constraintStart_toStartOf="@id/recyclerBackground" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/recyclerBackground"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp"
            app:transitionEasing="cubic(0,1,1,0)" />
        <Constraint
            android:id="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/artistHolder"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="200dp" />
        <Constraint
            android:id="@+id/songHolder"
            android:layout_width="wrap_content"
            android:textAlignment="viewStart"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/coverArtHolder" />
        <Constraint
            android:id="@+id/artistHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="@+id/songHolder"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/songHolder" />
        <Constraint
            android:id="@+id/coverArtHolder"
            android:elevation="6dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/handle"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="@id/recyclerBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/recyclerBackground"
            app:layout_constraintStart_toStartOf="@id/recyclerBackground" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:motionInterpolator="cubic(0,0.86,1,0)"
        app:autoTransition="none">
        <OnSwipe
            app:touchRegionId="@id/handle"
            app:touchAnchorId="@id/recyclerBackground"
            app:touchAnchorSide="bottom" />
        <KeyFrameSet >
            <KeyAttribute />
            <KeyPosition />
            <KeyPosition
                app:motionTarget="@+id/coverArtHolder"
                app:framePosition="40"
                app:keyPositionType="deltaRelative"
                app:percentY="0.9"
                app:sizePercent="0.7" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
